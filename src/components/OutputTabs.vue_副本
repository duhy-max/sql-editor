<template>
  <div class="output-container">
    <!-- 顶部标签 -->
    <div class="tabs">
      <div
        v-for="tab in results"
        :key="tab.id"
        :class="['tab-button', { active: tab.id === activeTab }]"
        :data-status="tab.success"
        @click="activeTab = tab.id"
      >
        <span>{{ tab.title }}</span>
        <span class="close-btn" @click.stop="emitClose(tab.id)">✕</span>
      </div>
    </div>

    <!-- 输出内容区域 -->
    <div class="output-content" v-if="activeResult">
      <!-- 普通查询/DDL 表格内容 -->
      <template v-if="!activeResult.component">
        <div class="result-table-wrapper">
        <table class="result-table" v-if="activeResult.data && activeResult.data.length">
          <thead>
            <tr>
              <th v-for="(v, k) in activeResult.data[0]" :key="k">{{ k }}</th>
            </tr>
          </thead>
          <tbody>
            <tr v-for="(row, i) in activeResult.data" :key="i">
              <td v-for="(v, k) in row" :key="k" style="white-space: pre-wrap; word-break: break-word; font-family: monospace;">{{ v }}</td>
            </tr>
          </tbody>
        </table>
        <div v-else class="no-result">暂无结果</div>
        <div class="result-info">
          <span class="status" :class="{ success: activeResult.success, fail: !activeResult.success }">
							<img
							  :src="activeResult.success ? successIcon : failIcon"
							  alt="执行状态"
							  class="icon"
               width="20" 
               height="20" 
							/>             
            {{ activeResult.success ? '执行成功'  : '执行失败' }}
          </span>
          <span class="time"><img src="../assets/icons/weui--time-outlined.svg" alt="time" width="20" height="20" class="icon"/>耗时：{{ activeResult.time || '—' }}</span>
          <span class="message">{{ activeResult.message }}</span>
        </div>
       </div>
      </template>

      <!-- Faker 造数表单 -->
      <template v-else-if="activeResult.component === 'FakerResult'">
        <div class="editor-toolbar">
           <button class="faker-btn" @click="submitFaker">
           <img src="../assets/icons/covid--transmission-virus-human-transmit-2.svg" alt="DB" width="20" height="20" class="icon"/>
						Faker Data
					  </button>
          <div class="table-info">
            <span><img src="../assets/icons/carbon--cics-db2-connection.svg" alt="DB" width="20" height="20" class="icon"/> {{ env }}<img src="../assets/icons/devicon--azuresqldatabase.svg" alt="DB" width="20" height="20" class="icon"/>{{ db }} <img src="../assets/icons/carbon--data-table-reference.svg" alt="DB" width="20" height="20" class="icon"/> {{ table }}</span> 
          </div>
        </div>

				<div class="faker-container">
				  <table class="faker-table">
					<thead>
					  <tr>
						<th>字段名</th>
						<th>类型</th>
						<th>注释</th>
						<th>主键</th>
						<th>样本数据</th>
					  </tr>
					</thead>
					<tbody>
					  <tr v-for="(col, index) in tableData" :key="index">
						<td>{{ col.name }}</td>
						<td>{{ col.type }}</td>
						<td>{{ col.comment }}</td>
						<td>
						  <input type="checkbox" v-model="col.isPrimary" />
						</td>
						<td>
						  <input
							type="text"
							v-model="col.sample"
							class="sample-input"
							placeholder="请输入样本值"
						  />
						</td>
					  </tr>
					</tbody>
				  </table>
				</div>

      </template>
    </div>

    <!-- 没有结果 -->
    <div v-else class="no-result">暂无结果</div>
  </div>
</template>

<script setup>

import successIcon from '../assets/icons/mdi--check-circle-outline.svg'
import failIcon from '../assets/icons/mdi--close-circle-outline.svg'

import { ref, computed, watch, reactive } from 'vue'
import axios from 'axios'
import { Icon } from '@iconify/vue'

const props = defineProps({
  results: Array,
})

const emit = defineEmits(['close-result'])

const activeTab = ref(null)
const tableDataMap = reactive({}) // 保存每个 faker tab 的表单数据

// 自动激活最后一个结果，并为 FakerResult 初始化表单数据（安全判定）
watch(
  () => props.results,
  (newVal) => {
    if (newVal.length > 0) {
      const last = newVal[newVal.length - 1]
      activeTab.value = last.id

      if (last.component === 'FakerResult' && !tableDataMap[last.id]) {
        // last.data 应该是你后端 /api/faker 返回的对象，包含 columns 和 rows
        // rows: [ ['id','Int32','主键ID'], ... ]
        const rows = Array.isArray(last.data?.rows) ? last.data.rows : []
        // 根据 rows 构建表单行：{ name, type, comment, isPrimary, sample }
        tableDataMap[last.id] = rows.map(r => ({
          name: r[0] ?? '',
          type: r[1] ?? '',
          comment: r[2] ?? '',
          isPrimary: false,
          sample: ''
        }))
      }
    } else {
      activeTab.value = null
    }
  },
  { deep: true, immediate: true }
)

const activeResult = computed(() =>
  props.results.find(r => r.id === activeTab.value)
)

// 计算当前 faker 的 env/db/table（从 activeResult.data）
const env = computed(() => activeResult.value?.data?.env || '')
const db = computed(() => activeResult.value?.data?.db || '')
const table = computed(() => activeResult.value?.data?.table || '')

// 取当前 tab 的表单数据（如果不是 faker 返回空数组）
const tableData = computed(() => {
  if (!activeResult.value) return []
  if (activeResult.value.component === 'FakerResult') {
    return tableDataMap[activeResult.value.id] || []
  }
  return []
})

function emitClose(id) {
  emit('close-result', id)
}

// 提交造数
async function submitFaker() {
  const tab = activeResult.value
  if (!tab || tab.component !== 'FakerResult') {
    alert('当前不是造数标签页')
    return
  }

  const payload = {
    env: env.value,
    db: db.value,
    table: table.value,
    columns: tableDataMap[tab.id].map(c => ({
      name: c.name,
      type: c.type,
      comment: c.comment,
      isPrimary: !!c.isPrimary,
      sample: c.sample
    }))
  }

  try {
    const res = await axios.post('/api/run-faker', payload)

		props.results.push({
			  id: Date.now(),
			  title: `造数 ${props.results.length} 结果`,
			  data: [],           // 后端返回结果
			  success: true,
			  time: res.data.time,
			  message: res.data.message
			})

			// 自动切换到新标签
		 activeTab.value = props.results[props.results.length - 1].id

  } catch (err) {
    console.error('造数提交失败:', err)
    props.results.push({
      id: Date.now(),
			title: `造数 ${props.results.length} 结果`,
			data: [],           // 后端返回结果
			success: false,
			time: res.data.time,
			message: res.data.message
    })

    activeTab.value = props.results[props.results.length - 1].id
  }

}

</script>

